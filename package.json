{
  "name": "posture-checker",
  "version": "0.3.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:build": "tsc -p tsconfig.electron.json && cpy \"electron/overlays/**/*.{html,css,js}\" \"dist/electron/overlays\" --parents && cpy \"public/images/unnamed-removebg-preview.png\" \"dist/electron/overlays/cat_hand\" --flat && cpy \"public/images/bad_posture.png\" \"dist/electron/overlays/toggle\" --flat && cpy \"public/images/good_posture.png\" \"dist/electron/overlays/toggle\" --flat",
    "electron:start": "npm run electron:build && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"cross-env BUILD_TARGET=electron npm run dev\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:package": "rimraf dist && rimraf release && cross-env BUILD_TARGET=electron npm run build && npm run electron:build && electron-builder",
    "electron:package:mac": "npm run electron:package -- --mac",
    "electron:package:win": "npm run electron:package -- --win",
    "electron:package:linux": "npm run electron:package -- --linux",
    "postinstall:electron": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.syakitto.app",
    "productName": "syakitto",
    "files": [
      "dist/electron/**/*",
      "out/**/*",
      "package.json",
      "public/**/*"
    ],
    "asar": false,
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**"
    ],
    "mac": {
      "identity": null,
      "category": "public.app-category.healthcare-fitness",
      "target": [
        {
          "target": "default",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icons/syakitto.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@tensorflow-models/face-landmarks-detection": "^1.0.6",
    "@tensorflow-models/pose-detection": "^2.1.3",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "@tensorflow/tfjs-converter": "^4.22.0",
    "@tensorflow/tfjs-core": "^4.22.0",
    "next": "^15.5.7",
    "node-addon-api": "^8.5.0",
    "react": "19.1.2",
    "react-dom": "19.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "25.1.8",
    "eslint": "^9",
    "eslint-config-next": "^15.5.5",
    "sharp": "0.34.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "volta": {
    "node": "20.20.0",
    "npm": "10.9.4"
  }
}
