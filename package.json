{
  "name": "posture-checker",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:build": "tsc -p tsconfig.electron.json && cpx \"electron/windows/**/*.{html,css,js}\" \"dist/electron/windows\"",
    "electron:start": "npm run electron:build && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:package": "npm run build && npm run electron:build && electron-builder",
    "electron:package:mac": "npm run electron:package -- --mac",
    "electron:package:win": "npm run electron:package -- --win",
    "electron:package:linux": "npm run electron:package -- --linux",
  "postinstall": "if [ \"$VERCEL\" = \"1\" ]; then echo \"Skipping electron postinstall on Vercel\"; else electron-builder install-app-deps; fi",
    "prisma:migrate": "dotenv -e .env.local -- npx prisma migrate dev"
  },
  "build": {
    "appId": "com.postureChecker.app",
    "productName": "Posture Checker",
    "files": [
      "dist/electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        {
          "target": "default",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.19.0",
    "@tensorflow-models/face-landmarks-detection": "^1.0.6",
    "@tensorflow-models/pose-detection": "^2.1.3",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "@tensorflow/tfjs-converter": "^4.22.0",
    "@tensorflow/tfjs-core": "^4.22.0",
    "bcrypt": "^6.0.0",
    "next": "15.5.5",
    "next-auth": "^4.24.13",
    "node-addon-api": "^8.5.0",
    "prisma": "^6.19.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.0.0",
    "electron-builder": "25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "sharp": "0.34.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  }
}
